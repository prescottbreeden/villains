@model Registration

<form asp-action="Register" asp-controller="Login" method="POST">
  <div class="input">
    <span class="error" asp-validation-for="FirstName"></span>
    <label asp-for="FirstName">FirstName</label>
    <input asp-for="FirstName">
  </div>
  <div class="input">
    <span class="error" asp-validation-for="LastName"></span>
    <label asp-for="LastName">LastName</label>
    <input asp-for="LastName">
  </div>
  <div class="input">
    <span class="error" asp-validation-for="Email"></span>
    <label asp-for="Email">Email</label>
    <input asp-for="Email">
  </div>
  <div class="input">
    <span class="error" asp-validation-for="Password"></span>
    <label asp-for="Password">Password</label>
    <input asp-for="Password">
  </div>
  <div class="input">
    <span class="error" asp-validation-for="Confirm"></span>
    <label asp-for="Confirm">Confirm</label>
    <input asp-for="Confirm">
  </div>
  <button>Register</button>
</form>
